@using CTSDev.ViewModels;
@model LoginViewModel
@{
	ViewBag.Title = "Login";
    Layout = null;
}
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=Edge">
	<meta name="viewport" content="width=device-width" />
	<title>Login Page</title>
</head>

<body>
	@using (Html.BeginForm())
	{
		<div class="lg-bg">
			<form name="login">
				<div class="lg-head">
					<div class="brand-logo">
						<img src="~/Content/Images/prime-technology-group.min.png" alt="Prime" />
					</div>
					@* <p>@ConfigurationHelper.GetString("ApplicationName")</p>*@
				</div>
				<div class="form-grp cf">
					<div class="grp1">
						<div class="gap">@Html.Label("lbluname", "UserName:")</div>
						<div>
							@Html.TextBoxFor(m => m, new { required = true, autocomplete = "off" })
						</div>
					</div>
					<!-- end of grp1 -->
					<div class="grp2 err-icon">
						<a href="#" id="UserNameErrNotes" class="tooltip" style="display: none;">
							<img src="~/Content/Images/danger-icon-2.png" alt="">
						</a>
					</div>
					<!--end of grp2-->
					<div class="grp1">
						<div class="gap">@Html.Label("lblpwd", "Password:")</div>
						<div>@Html.PasswordFor(m => m.Password, new { required = true, autocomplete = "off" })</div>
					</div>
					<!-- end of grp1 -->
					<div class="grp2 err-icon">
						<a href="#" id="PasswordErrNotes" class="tooltip" style="display: none;">
							<img src="~/Content/Images/danger-icon-2.png" alt="">
						</a>
					</div>
					<b style="color: red">@ViewBag.Message</b>
					<!--end of grp2-->
				</div>
				<!-- end of form-grp -->

				<div class="gap" style="text-align: right">
					<input type="submit" class="btn btn-sm btn-primary" value="LOGIN" id="btnSubmit" />
					@*<input type="reset" value="Cancel" />*@
				</div>
			</form>


		</div>
        <!-- end of lg-bg -->

	}

</body>
</html>





